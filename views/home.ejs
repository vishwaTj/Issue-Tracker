<link rel="stylesheet" href="../assets/css/Home_page.css">

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

<h1 id="page-title"><%= title %> Tracker</h1>

    <!-- create project button after checking authentication -->
<% if(locals.user){ %>
<button type="button" class="btn btn-primary project-button" data-bs-toggle="collapse" data-bs-target="#demo">New Project</button>
  <div id="demo" class="collapse input-container">
       <button data-bs-toggle="collapse" data-bs-target="#demo" class="close-form" >
        X
       </button>
        <form id="form-box" action="/projects/create" id="new-post-form" method="post">
           <div class="section"> 
            <label class="labels">Project Name: </label>
            <input class="input-box"  class="input-values" name="ProjectName" placeholder="Name of the project">
           </div>
           <div class="section">  
            <label class="labels"><p>Author :&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&emsp;&emsp;&emsp;&emsp;<%= locals.user.name %></p></label>
            <INPUT TYPE="hidden" name="author" VALUE="<%= locals.user.name %>"/>
           </div>
           <div id="desc-div" class="section"> 
            <label class="labels desc" for="content">Description :</label>
            <textarea class="input-box desc-input" name="content" cols="60" rows="6" placeholder="Type Here..."></textarea>
           </div> 
            <input type="submit" value="Submit">
         </form>
  </div>
<%}else{%>
<%}%>

     <!-- ------  display projects -------- -->
<section>
    <h4 id="Projects-title">Projects</h4>
    <posts>
       <ul> 
          <% for(project of projects){%>
           <div class="project">
            <a href="/projects/<%=project._id%>"><img src="../assets/images/eye.png"></a>

            <li> 
                <h5><%=project.ProjectName%></h5>
                <h5><%=project.content%></h5>
            </li>    
           </div>  
          <%}%>
       </ul> 
    </posts>
</section>
    
